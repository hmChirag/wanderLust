<% layout("layouts/boilerPlate") %>
<body>
    <h3 style="margin-left: 35rem;">Edit page</h3>
    <div class="row">
        <div class="col-8 offset-2">
            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation">
                <div>
                    <label for="title" class="form-label"><b>Title</b></label>
                    <input type="text"  name="listing[title]" value="<%= listing.title%>" class="form-control" required/>
                    <div class="valid-feedback">Title looks good!</div>
                    <div class="invalid-feedback">Enter valid title!</div>
                </div>
                <div>
                    <label for="description" class="form-label"><b>Description</b></label>
                    <textarea name="listing[description]" value="<%= listing.description%>" class="form-control"required ></textarea>
                </div>

                <div>
                    <label for="image" class="form-label"><b>Image Link</b></label>
                    <input type="text" name="listing[image]" value="<%= listing.image%>" class="form-control" required/>
                    <div class="valid-feedback">image looks good!</div>
                    <div class="invalid-feedback">Enter valid url!</div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <label for="price" class="form-label"><b>Price</b></label>
                        <input type="number" name="listing[price]" value="<%= listing.price%>" class="form-control" required/>
                        <div class="valid-feedback">Price looks good!</div>
                        <div class="invalid-feedback">Enter valid Price!</div>
                    </div>
                    <div class="col-8">
                        <label for="country" class="form-label"><b>Country</b></label>
                        <input type="text" name="listing[country]" value="<%= listing.country%>" class="form-control" required/>
                        <div class="valid-feedback">Country looks good!</div>
                        <div class="invalid-feedback">Enter valid Country!</div>
                    </div>
                </div>
                <div>
                    <label for="location" class="form-label"><b>Location</b></label>
                    <input type="text" name="listing[location]" value="<%= listing.location%>" class="form-control" required/>
                    <div class="valid-feedback">Location looks good!</div>
                    <div class="invalid-feedback">Enter valid location!</div>
                </div>
                <br>
                <button class="btn btn-dark add-btn">Edit</button>
            </form>
        </div>    
    </div>    
    <script src="/js/script.js"></script>
</body>

