                <a href="/listings/<%= listings._id%>" style="text-decoration: none;">                
            <div class="card">
                <img src="<%= listings.image%>" class="card-img-top" alt="listing image" style="border-radius: 10px; height: 275px; width: 350px;">
                
                <div class="card-img-overlay">abcd</div>
                <div class="card-body">
                    <p class="card-text">
                        <b><%= listings.title %></b> <br>
                        &#8377 <%= listings.price.toLocaleString("en-IN") %> / night
                    </p>
                </div>
            </div>
            <% } %>
        </a>
        </div>
