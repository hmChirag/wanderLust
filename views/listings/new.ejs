<% layout("layouts/boilerPlate") %>
<body>
    <h3 style="margin-left: 30rem;">Create a new listing</h3>
    <div class="row">
        <div class="col-8 offset-2">
            <form method="POST" action="/listings" novalidate class="needs-validation">
                <div>
                    <label for="title" class="form-label"><b>Title</b></label>
                    <input type="text" placeholder="enter tiltle" name="listing[title]" class="form-control" required/>
                    <div class="valid-feedback">Title looks good!</div>
                    <div class="invalid-feedback">Enter valid title!</div>
                </div>
                <div>
                    <label for="description" class="form-label"><b>Description</b></label>
                    <textarea name="listing[description]" placeholder="Give us a little description" class="form-control" required></textarea>
                </div>
                <div>
                    <label for="image" class="form-label"><b>Image</b></label>
                    <input type="text" name="listing[image]" placeholder="enter the image URL" class="form-control">
                </div>
                <div class="row">
                    <div class="col-4">
                        <label for="price" class="form-label"><b>Price</b></label>
                        <input type="number" name="listing[price]" placeholder="enter the price" class="form-control" required/>
                        <div class="invalid-feedback">Enter valid Price!</div>
                        <div class="valid-feedback">Price looks good!</div>
                    </div>
                    <div class="col-8">
                        <label for="country" class="form-label"><b>Country</b></label>
                        <input type="text" name="listing[country]" placeholder="enter the country" class="form-control" required/>
                        <div class="invalid-feedback">Enter valid Country!</div>
                        <div class="valid-feedback">Valid Country!</div>
                    </div>
                </div>
                <div>
                    <label for="location" class="form-label"><b>Location</b></label>
                    <input type="text" name="listing[location]" placeholder="enter the location"  class="form-control" required/>
                    <div class="invalid-feedback">Enter valid location!</div>
                    <div class="valid-feedback">Valid location!</div>
                </div>
                <br>
                <button class="btn btn-dark add-btn">Add</button>
            </form>
        </div>
    </div>
</body>
