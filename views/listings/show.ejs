<% layout("layouts/boilerPlate") %>

<div class="row mt-3">
    <div class="col-12 ">
        <h3>Listing details</h3>
    </div>
        <div class="card col-6" style="width: 18rem;">
            <img src="<%=listing.image%>" class="card-img-top show-img"
                alt="listing image">
            <div class="card-body">
                <p class="card-text"><%= listing.title%></p>
            </div>
        </div>
        <ul>
            <li><%= listing.description%></li>
            <li> &#8377;<%= listing.price%></li>
            <li><%= listing.location%></li>
            <li><%= listing.country%></li>
        </ul>
        <br>
        <div class="btns">
            <a href="/listings/<%= listing._id %>/edit"
                style="text-decoration:none;color: black;"><button
                    class="btn btn-dark col-1 add-btn">Edit</button></a>

            <button style="display: none;">
                <form method="POST"
                    action="/listings/<%= listing._id%>?_method=DELETE">
                    <button class="btn add-btn col-1 offset-1" style="color: white;">Delete</button>
                </form>
            </button>
        </div>
</div>
