<% layout("layouts/boilerPlate") %>

<div class="row mt-3 ">
    <div class="col-10 offset-3">

        <div class="col-12">
            <h3><%= listing.title%></h3>
        </div>
            <div class="card col-6" style="width: 18rem;">
                <img src="<%=listing.image%>" class="card-img-top show-img"
                    alt="listing image">
                <div class="card-body">
                    <p class="card-text"></p>
                </div>
            </div>
            <ul>
                <li><%= listing.description%></li>
                <li> &#8377;<%= listing.price%></li>
                <li><%= listing.location%></li>
                <li><%= listing.country%></li>
            </ul>
            <br>
            <div class="btns">
                <a href="/listings/<%= listing._id %>/edit"
                    style="text-decoration:none;color: black;"><button
                        class="btn btn-dark col-1 add-btn">Edit</button></a>
    
                <button style="display: none;">
                    <form method="POST"
                        action="/listings/<%= listing._id%>?_method=DELETE">
                        <button class="btn add-btn col-1 offset-1" style="color: white;">Delete</button>
                    </form>
                </button>
            </div>        
    </div>
    
        <div class="mb-3">
            <hr>
            <h4>Leave a review</h4>
            <form action="/listings/<%= listing._id %>/reviews" method="POST">
                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
                </div>
                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Comments</label>
                    <textarea name="review[comment]" id="comment" cols="10" rows="3" class="form-control"></textarea>
                </div>
                <br>
                <button class="btn btn-outline-dark">Submit</button> 
            </form>
        </div>
</div>
